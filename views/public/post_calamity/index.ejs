              $.ajax({
                url : '/api/article',
                data : { title: $('#composeText').val(), 
                         content : $('#composeTextArea').val(), 
                         tags : $('#composeTags').val()
                        },
                type: 'POST',
                dataType: 'json',
                success: function(data) {
                  if (data.status == 'success') {
                    var article_id = data.data.id;
                      $('#files').find('.btn-primary').click();
                  }
                }
              });
          });

          function setUrl (article_id) {
