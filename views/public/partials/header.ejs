<script>
    $("#collapse-btn").click(function(){
        if( $("ul.tools li").hasClass('active')){
            $("ul.tools li").removeClass("active");
            $(".tab-pane").removeClass("active in");
            $("#collapse-btn").addClass("disabled");
        }else {
            $(".tab-pane").addClass("fade in");
            $("#collapse-btn").removeClass("disabled");
        }      
    });
</script>
