                        <div class="heading">
                            <label for="show">
                                <a id="search">Search Address</a>
                            </label>
                        </div>  
                        <div class="search">
                            <input id="search" type="text" value="" placeholder="What's your address?" />
                            <input type="button" class="btn" value="Search" />
                        </div>  
